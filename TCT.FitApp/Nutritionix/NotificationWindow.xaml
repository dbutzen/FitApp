<Window x:Class="Nutritionix.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nutritionix"
        mc:Ignorable="d"
        Title="NotificationWindow" Height="222" Width="390">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBox x:Name="txtName" Margin="5" Text="System"/>
            <TextBox x:Name="txtMessage" Margin="5" />
            <Button x:Name="btnSend" Margin="5" Content="Send" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
